{
  "name": "cypress-cucumber-e2e-testing",
  "version": "1.0.0",
  "description": "A simple cucumber test framework in cypress",
  "main": "index.js",
  "scripts": {
    "open:cypress:dev": "cypress open --env ENV=dev05",
    "open:cypress:staging": "cypress open --env ENV=staging",
    "test:chrome": "cypress run --headed --browser chrome",
    "smoke:test:dev:run": "npx cypress-tags run -e TAGS='@smoke' --env ENV=dev05 --headless --browser chrome"
  },
  "keywords": [
    "cucumber",
    "cypress",
    "javascript",
    "gherkin"
  ],
  "author": "Chris Morris",
  "license": "ISC",
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": "cypress/integration",
    "nonGlobalStepDefinitions": true,
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/cucumber-json",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  },
  "dependencies": {
    "cypress": "^10.6.0",
    "cypress-cucumber-preprocessor": "^4.3.0",
    "multiple-cucumber-html-reporter": "^1.18.3",
    "mocha": "^10.0.0"
  },
  "devDependencies": {
    "cypress-iframe": "^1.0.1"
  }
}
